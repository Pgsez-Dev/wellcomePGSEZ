@model IEnumerable<wellcomePGSEZ.Models.Types>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TId">Details</a> |
