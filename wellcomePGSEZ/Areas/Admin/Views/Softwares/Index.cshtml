        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SImageAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SDescription)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SLinkAddress)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.STag)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SStatus)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SType.TId)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
