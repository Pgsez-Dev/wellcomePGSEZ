@model IEnumerable<wellcomePGSEZ.Models.User>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UFirstName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ULastName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UPosition)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UDep)
            </th>
            <th></th>
        </tr>
    </thead>
